<p id="notice"><%= notice %></p>

<h1>Food Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Expiration date</th>
      <th>Address</th>
      <th>Available start</th>
      <th>Available end</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @food_items.each do |food_item| %>
      <tr>
        <td><%= food_item.title %></td>
        <td><%= image_tag food_item.food_item_image(:thumb)%></td>
        <td><%= food_item.expiration_date %></td>
        <td><%= food_item.address %></td>
        <td><%= food_item.available_start %></td>
        <td><%= food_item.available_end %></td>
        <td><%= food_item.user.email %></td>
        <td><%= link_to 'Show', food_item %></td>
        <td><%= link_to 'Edit', edit_food_item_path(food_item) %></td>
        <td><%= link_to 'Destroy', food_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Food Item', new_food_item_path %>
